material {
    name : PointRender,
    requires : [
        position, 
        tangents,
        custom0, 
        color
    ],
    shadingModel: unlit,
    blending : add,
    parameters : [
        { 
            type : float, 
            name : pointSizeScale 
        }
    ]
}

vertex {
    void materialVertex(inout MaterialVertexInputs material) {
        gl_PointSize = getCustom0().r * materialParams.pointSizeScale;
    }
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        material.baseColor = getColor();
    }
}
